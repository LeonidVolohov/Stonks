<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.main.MainActivity">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/preferences_setup_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose your main currency"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintBottom_toTopOf="@+id/default_currency_selector_spinner"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Spinner
            android:id="@+id/default_currency_selector_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/rates"
            android:gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/language_selection_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="And your language"
            android:textSize="@dimen/text_size_large"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/default_currency_selector_spinner" />

        <RadioGroup
            android:id="@+id/language_selection_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_padding_size_small"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/language_selection_text"
            android:checkedButton="@id/english_language">

            <RadioButton
                android:id="@+id/english_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_size_small"
                android:drawableTop="@drawable/ic_united_states"
                android:text="ENG" />

            <RadioButton
                android:id="@+id/russian_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_size_small"
                android:drawableTop="@drawable/ic_russia"
                android:text="RU" />
        </RadioGroup>

        <Button
            android:id="@+id/save_preferences_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="GO"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/guide_overlay_first_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:background="#CC666666"
        android:orientation="vertical">

        <TextView
            android:id="@+id/first_guide_page_main_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="Navigate between modes"
            android:textAlignment="center"
            android:textColor="?attr/colorAccent"
            android:textSize="@dimen/text_size_xlarge" />

        <TextView
            android:id="@+id/first_guide_page_next_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/first_guide_page_main_text"
            android:text="(Tap to continue)"
            android:textAlignment="center"
            android:textColor="?attr/colorAccent"
            android:textSize="@dimen/text_size_medium" />

        <ImageView
            android:id="@+id/first_guide_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/first_guide_page_next_text"
            android:scaleType="fitXY"
            android:src="@drawable/ic_guide_bottom_nav" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/guide_overlay_second_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation"
        android:background="#CC666666"
        android:measureWithLargestChild="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/second_guide_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/second_guide_page_main_text"
            android:scaleType="fitXY"
            android:src="@drawable/ic_arrows_to_currencies" />

        <TextView
            android:id="@+id/second_guide_page_main_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/second_guide_page_next_text"
            android:gravity="center_horizontal"
            android:text="Choose base &amp; target"
            android:textColor="?attr/colorAccent"
            android:textSize="@dimen/text_size_xlarge" />

        <TextView
            android:id="@+id/second_guide_page_next_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_horizontal"
            android:text="(Tap to continue)"
            android:textColor="?attr/colorAccent"
            android:textSize="@dimen/text_size_medium" />

    </RelativeLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation"
        android:background="@color/design_default_color_background"/>
</RelativeLayout>
